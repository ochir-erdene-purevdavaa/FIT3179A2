{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "layer": [
    {
      "data": {
        "url": "speciesGrowth.csv",
        "format": {"type": "csv", "parse": {"mid_year": "number", "recinmil": "number"}}
      },
      "mark": {
        "type": "area",
        "interpolate": "monotone",
        "color": "#7ec697"
      },
      "encoding": {
        "x": {"field": "mid_year", "type": "quantitative", "title": "Mid-Year of Period"},
        "y": {"field": "recinmil", "type": "quantitative", "title": "New Species Records (millions)"},
        "tooltip": [
          {"field": "mid_year", "type": "quantitative", "title": "Year"},
          {"field": "recinmil", "type": "quantitative", "title": "Records (millions)"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {"mid_year": 2002, "recinmil": 14.2, "label": "Spike due to improved species reporting."}
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 5,
        "dy": -5,
        "color": "grey"
      },
      "encoding": {
        "x": {"field": "mid_year", "type": "quantitative"},
        "y": {"field": "recinmil", "type": "quantitative"},
        "text": {"field": "label"}
      }
    }
  ]
}
