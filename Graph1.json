{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "transform": [
        {"filter": "datum.id == '036'"}
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "species_richness_by_state.csv"
      },
      "transform": [
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/australia.json",
              "format": {"type": "topojson", "feature": "states"}
            },
            "key": "properties.code", 
            "fields": ["geometry", "properties.name"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "species",
          "type": "quantitative",
          "scale": {"scheme": "greens"},
          "title": "Species Richness"
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "species", "type": "quantitative"}
        ]
      }
    }
  ]
}
